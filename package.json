{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Notification Service for URL Shortener",
  "type": "commonjs",
  "main": "dist/notificationService.js",
  "bin": "dist/notificationService.js",
  "scripts": {
    "clean": "rimraf dist && rimraf binary",
    "dev": "clear && node dist/notificationService.js",
    "compile": "npm run clean && npm run tsc && npm run minify",
    "build": "npm run compile && npm run package",
    "tsc": "tsc",
    "package": "pkg . --compress=Gzip",
    "minify": "find dist -name '*.js' -exec terser {} --output {} --compress --mangle --comments=false --toplevel \\;",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-linux-x64"
    ],
    "outputPath": "binary/",
    "assets": [
      "dist/**/*"
    ]
  },
  "author": "Akhilesh Garg",
  "license": "ISC",
  "dependencies": {
    "@types/nodemailer": "^6.4.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "nodemailer": "^6.9.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "terser": "^5.34.1"
  }
}
